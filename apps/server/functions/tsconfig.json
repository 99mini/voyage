{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": false,
    "baseUrl": ".",
    "paths": {
      "@functions/*": ["./src/*"],
      "@functions/webhooks/*": ["./src/webhooks/*"]
    }
  },
  "include": ["src/**/*"]
}
