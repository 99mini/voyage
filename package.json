{
  "name": "voyage",
  "author": "99mini",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "workspaces": [
    "apps/frontend/*",
    "apps/cli/*",
    "apps/server/*",
    "packages/*"
  ],
  "scripts": {
    "check-server": "sh ./.script/check-server.sh",
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build",
    "start": "pnpm -r run start",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "test": "pnpm -r run test",
    "deploy": "pnpm -r run deploy",
    "dev:tech": "pnpm --filter tech run start",
    "dev:tool": "pnpm --filter tool run dev",
    "dev:admin": "pnpm --filter admin run dev",
    "dev:awesome": "pnpm --filter awesome run dev",
    "dev:func": "pnpm --filter server-functions run dev",
    "dev:vds": "pnpm --filter vds run dev",
    "dev:rest": "pnpm --filter server-rest run dev",
    "dev:api-client": "pnpm --filter api-client run dev",
    "dev:pb-api": "pnpm --filter pb-api run dev",
    "build:tech": "pnpm --filter tech run build",
    "build:tool": "pnpm --filter tool run build",
    "build:admin": "pnpm --filter admin run build",
    "build:awesome": "pnpm --filter awesome run build",
    "build:fe": "pnpm --filter tech run build && pnpm --filter tool run build && pnpm --filter admin run build && pnpm --filter awesome run build",
    "build:func": "pnpm --filter server-functions run build",
    "build:rest": "pnpm --filter server-rest run build",
    "deploy:tool": "pnpm --filter tool run deploy",
    "deploy:tech": "pnpm --filter tech run deploy",
    "deploy:admin": "pnpm --filter admin run deploy",
    "deploy:awesome": "pnpm --filter awesome run deploy",
    "deploy:fe": "pnpm --filter tech run deploy && pnpm --filter tool run deploy && pnpm --filter admin run deploy && pnpm --filter awesome run deploy",
    "deploy:func": "pnpm --filter server-functions run deploy",
    "deploy:rest": "pnpm --filter server-rest run deploy"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.5",
    "eslint-plugin-prettier": "^5.0.0",
    "pnpm": "^10.0.0",
    "prettier": "^3.0.0",
    "rollup": "^4.24.3",
    "rollup-plugin-dts": "^6.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core"
    ]
  }
}
